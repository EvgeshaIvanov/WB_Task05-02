<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_item"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/hero_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_item"
        app:cardCornerRadius="@dimen/cardview_compat_inset_shadow"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/hero_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_margin="16dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/hero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/hero_name_text"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/border_item"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />
</androidx.appcompat.widget.LinearLayoutCompat>